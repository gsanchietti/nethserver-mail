# Calculate a pie chart of filtered mail

TMP_FILE=$(mktemp)
LOG="/var/log/maillog"
DAY=$(date +"%b %d")

PREVIOUS_LOG="$LOG-"$(date -d "-1 day" +"%Y%m%d")
if [ -f "$PREVIOUS_LOG" ] || [ -f "$PREVIOUS_LOG.gz" ]; then
    zgrep "$DAY" $PREVIOUS_LOG*  > $TMP_FILE
fi

grep "$DAY" /var/log/maillog >> $TMP_FILE

value=0

value=$(grep "postfix/smtpd" $TMP_FILE | wc -l)
value=$((value+$(grep "default: F (no action)" $TMP_FILE | wc -l)))

pos=10
id=$(basename $0)
title=$id
type=$(basename $0 | cut -d'-' -f2)
chartType=$(basename $0 | cut -d'-' -f3)
tags='["mail", "received", "message"]'
unit="number"
snap='false'

echo -n "{\"value\":$value,\"type\":\"$type\",\"title\":\"$title\",\"tags\":$tags,\"position\":$pos,\"minerId\":\"$id\",\"snapshot\":$snap}"

rm -f $TMP_FILE 2>/dev/null

